<header class="max-w-7xl mx-auto sm:px-6 lg:px-8 flex items-center justify-between">
  <div class="ml-4 mt-2">
    <h1 class="text-3xl font-bold leading-tight text-gray-900">Notes</h1>
  </div>
  <div class="ml-4 mt-2 flex-shrink-0">
    <a href="/notes/new" class="relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Create New Note</a>
  </div>
</header>
<main>
  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <div class="bg-white shadow overflow-hidden sm:rounded-md p-4 mt-4">
      <ul role="list" class="divide-y divide-gray-200">
        {{#each notes}}
        <li class="py-4 flex"><a href="/notes/{{this.id}}">{{this.note}}</a></li>
        {{/each}}
      </ul>
    </div>
  </div>
</main>
