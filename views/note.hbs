<header class="max-w-7xl mx-auto sm:px-6 lg:px-8 flex items-center justify-between">
  <div class="ml-4 mt-2">
    <h1 class="text-3xl font-bold leading-tight text-gray-900">{{title}}</h1>
  </div>
  <div class="ml-4 mt-2 flex-shrink-0">
  </div>
</header>
<main>
  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <form class="space-y-6" action="{{action}}" method="POST">
        <input type="hidden" name="id" value="{{ node.id }}">
        <div class="bg-white shadow overflow-hidden sm:rounded-md p-4 mt-4">
          <textarea rows="4" name="note" id="note" class="block w-full sm:text-sm">{{note.note}}</textarea>
        </div>

        <button type="submit" class="ml-4 mt-2 relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Save</button>
        or <a href="/" class="text-indigo-600 hover:text-indigo-900">cancel</a>
    </form>
  </div>
</main>
